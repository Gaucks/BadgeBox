{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    {{ form_errors(form) }}
    {{ form_errors(form.email) }}
    {{ form_widget(form.email, {'attr': {'class': 'txt', 'placeholder': 'votre-email@mail.com'}}) }}

    {{ form_errors(form.username) }}
    {{ form_widget(form.username, {'attr': {'class': 'txt', 'placeholder': 'Nom d\'utilisateur'}}) }}

    {{ form_errors(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'txt', 'placeholder': 'Mot de passe'}}) }}

    {{ form_errors(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'txt', 'placeholder': 'Confirmation'}}) }}

    {{ form_rest(form) }}

    <div>
        <input type="submit" value="{{ 'registration.submit'|trans }}" class="sub"/>
    </div>
</form>
